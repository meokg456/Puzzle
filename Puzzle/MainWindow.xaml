		</Menu>
        <Canvas Name="uiCanvas">
            <Label Name="lblTime" FontSize="48" Width="240" Height="92" HorizontalContentAlignment="Center" Canvas.Left="430" Canvas.Top="250" />
        </Canvas>
    </DockPanel>
